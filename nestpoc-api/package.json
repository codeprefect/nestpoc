{
  "name": "nest-poc",
  "version": "0.0.1",
  "description": "A proof of concept for NestJS, GraphQL and TOTP 2FA",
  "author": "Mubarak Imam",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "tsc": "ts-node -r tsconfig-paths/register",
    "build": "tsc -b tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.json -s ./src -o ./dist && $(npm bin)/gulp",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "yarn tsc src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "yarn run build",
    "start:p": "node dist/main.js",
    "start:prod": "yarn start:p",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:unit:watch": "yarn test:unit:cov --watch",
    "test:unit:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-unit.json --runInBand",
    "test:integration": "jest --config ./test/jest-integration.json",
    "pretest:integration:full": "yarn db:refresh",
    "test:integration:full": "yarn test:integration",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:coverall": "jest --coverage",
    "typeorm": "yarn tsc ./node_modules/typeorm/cli.js",
    "db:rollback": "yarn typeorm schema:drop",
    "db:generate": "yarn typeorm migration:generate",
    "db:migrate": "yarn typeorm migration:run",
    "db:refresh": "yarn db:rollback && yarn db:migrate"
  },
  "dependencies": {
    "@hapi/joi": "^14.3.1",
    "@nestjs/common": "^6.2.4",
    "@nestjs/core": "^6.2.4",
    "@nestjs/graphql": "^6.2.1",
    "@nestjs/jwt": "^6.1.0",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.2.4",
    "africastalking": "^0.4.0",
    "apollo-server-express": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "graphql": "^14.2.1",
    "graphql-tools": "^4.0.4",
    "gulp": "^4.0.2",
    "install": "^0.12.2",
    "nest-router": "^1.0.9",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.9.0",
    "qr-image": "^3.2.0",
    "rxjs": "^6.3.3",
    "speakeasy": "^2.0.0",
    "twilio": "^3.31.0",
    "typeorm": "^0.2.16"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/hapi__joi": "^15.0.1",
    "@types/jest": "^23.3.13",
    "@types/node": "^11.13.0",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tscpaths": "^0.0.9",
    "tslint": "5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.1",
    "uuid": "^3.3.2"
  },
  "jest": {
    "globalSetup": "<rootDir>/setup-jest.js",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@nestpoc/(.*)": "<rootDir>/modules/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts",
      "!<rootDir>/**/*.spec.ts",
      "!<rootDir>/**/index.ts",
      "!<rootDir>/main.ts",
      "!<rootDir>/**/*.d.ts",
      "!<rootDir>/**/dist/**/*.d.ts",
      "!**/__mocks__/**/*.ts"
    ]
  }
}
