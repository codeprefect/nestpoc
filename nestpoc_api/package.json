{
  "name": "nest-poc",
  "version": "0.0.2",
  "description": "A proof of concept for NestJS, GraphQL and TOTP 2FA",
  "author": "Mubarak Imam",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "yarn run build",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:unit:watch": "yarn test:unit:cov --watch",
    "test:unit:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/jest-unit.json --runInBand",
    "test:integration": "jest --config ./test/jest-integration.json",
    "pretest:integration:full": "yarn db:refresh",
    "test:integration:full": "yarn test:integration",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:coverall": "jest --coverage",
    "typeorm": "ts-node -r tsconfig-paths/register --transpile-only ./node_modules/typeorm/cli.js",
    "db:rollback": "yarn typeorm schema:drop",
    "db:generate": "yarn typeorm migration:generate",
    "db:migrate": "yarn typeorm migration:run",
    "db:refresh": "yarn db:rollback && yarn db:migrate"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.1",
    "africastalking": "^0.5.4",
    "apollo-server-express": "2.x.x",
    "apollo-server-fastify": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.1",
    "graphql-tools": "^7.0.5",
    "joi": "^17.4.1",
    "mssql": "^7.1.3",
    "nest-router": "^1.0.9",
    "pg": "^8.6.0",
    "qr-image": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "speakeasy": "^2.0.0",
    "ts-morph": "^11.0.3",
    "twilio": "^3.66.0",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gulp": "^4.0.2",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  },
  "jest": {
    "globalSetup": "<rootDir>/setup-jest.js",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@nestpoc/(.*)": "<rootDir>/modules/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts",
      "!<rootDir>/**/*.spec.ts",
      "!<rootDir>/**/index.ts",
      "!<rootDir>/main.ts",
      "!<rootDir>/**/*.d.ts",
      "!<rootDir>/**/dist/**/*.d.ts",
      "!**/__mocks__/**/*.ts"
    ]
  }
}
